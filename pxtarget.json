            }
        ],
        "invertedMenu": false,
        "invertedToolbox": false,
        "invertedMonaco": false,
        "monacoToolbox": true,
        "highContrast": true,
        "greenScreen": true,
        "blocksCollapsing": true,
        "accessibleBlocks": true,
        "simAnimationEnter": "fly right in",
        "simAnimationExit": "fly right out",
        "hasAudio": true,
        "usbDocs": "/device/usb",
        "disableBlockIcons": true,
